{
  "name": "lims-system",
  "version": "1.0.0",
  "description": "Laboratory Information Management System",
  "main": "server.js",
  "scripts": {
    "start": "node start.js",
    "start:server": "node server.js",
    "start:python": "python data_processor.py",
    "start:frontend": "cd client && npm start",
    "dev": "concurrently \"npm run start:server\" \"npm run start:python\" \"npm run start:frontend\"",
    "install:all": "npm install && cd client && npm install",
    "test": "jest"
  },
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^6.0.0",
    "bcrypt": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "concurrently": "^7.0.0"
  },
  "devDependencies": {
    "jest": "^27.0.6",
    "nodemon": "^2.0.12"
  }
}
{
  "scripts": {
    "build:frontend": "cd client && npm run build",
    "prestart": "npm run build:frontend",
    "start": "node start.js",
    "dev": "concurrently \"npm run start:server\" \"npm run start:python\" \"npm run start:frontend\""
  }
}
